<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/separador"
        android:paddingTop="5dp"
        android:text="Win Rate: " />

    <TextView
        android:id="@+id/txtBuildRol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="TOP"
        android:textSize="30dp" />

    <View
        android:id="@+id/separador"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/txtBuildRol"
        android:background="@android:drawable/divider_horizontal_dim_dark" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:text="Pick Rate: " />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:text="Ban Rate: " />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView7"
        android:text="KDA:" />

    <TextView
        android:id="@+id/txtWinRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separador"
        android:layout_toEndOf="@+id/textView6"
        android:paddingTop="5dp"
        android:text="50%" />

    <TextView
        android:id="@+id/txtPickRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView6"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/textView6"
        android:text="3,5%" />

    <TextView
        android:id="@+id/txtBanRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_toEndOf="@+id/textView6"
        android:text="1,5%" />

    <TextView
        android:id="@+id/txtKda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_toEndOf="@+id/textView6"
        android:text="3.54" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView8"
        android:text="Partidas:" />

    <TextView
        android:id="@+id/txtPartidas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_toEndOf="@+id/textView6"
        android:text="1859" />

</RelativeLayout>